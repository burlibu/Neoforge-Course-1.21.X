{
  "java.configuration.updateBuildConfiguration": "automatic",
  "java.compile.nullAnalysis.mode": "automatic",
  "java.project.sourcePaths": ["src/main/java", "src/main/resources"],
  "java.project.outputPath": "build/classes/java/main",
  "java.project.referencedLibraries": ["libs/**/*.jar", "build/libs/*.jar"],
  "java.jdt.ls.vmargs": "-Xmx4G",
  "gradle.nestedProjects": false,
  "gradle.autoDetect": "on",
  "files.exclude": {
    "**/.gradle": true,
    "**/build": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  }
}
